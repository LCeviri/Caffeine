<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
    <id>@project_id@</id>
    <metadata_license>CC-BY-SA-4.0</metadata_license>
    <project_license>MIT</project_license>    
    <name>Caffeine</name>
    <summary>Calculate your coffee</summary>
    <description>
        <p><em>Caffeine</em> is a utility for coffee enthusiasts. It's sole purpose is to calculate the ratio of a coffee made.</p>
        <p>For example, an espresso made from <code>10g</code> of coffee ground wheighing <code>18g</code> would have a ratio of <code>1 : 1.8</code>.</p>
    </description>
    <launchable type="desktop-id">@project_id@.desktop</launchable>
    <categories>
        <category>Utility</category>
    </categories>
    <content_rating type="oars-1.1" />
    <url type="homepage">https://github.com/konstantintutsch/Caffeine</url>
    <url type="vcs-browser">https://github.com/konstantintutsch/Caffeine</url>
    <url type="bugtracker">https://github.com/konstantintutsch/Caffeine/issues</url>
    <url type="translate">https://github.com/konstantintutsch/Caffeine/tree/main/po</url>
    <update_contact>mail@konstantintutsch.com</update_contact>
    <developer id="com.konstantintutsch">
        <name translate="no">Konstantin Tutsch</name>
    </developer>
    <branding>
        <color type="primary" scheme_preference="light">#f5c211</color>
        <color type="primary" scheme_preference="dark">#f5c211</color>
    </branding>
    <screenshots>
        <screenshot type="default">
            <image>https://github.com/konstantintutsch/Caffeine/raw/refs/heads/main/data/com.konstantintutsch.Caffeine.Screenshot.Light.png</image>
        </screenshot>
        <screenshot>
            <image>https://github.com/konstantintutsch/Caffeine/raw/refs/heads/main/data/com.konstantintutsch.Caffeine.Screenshot.Dark.png</image>
        </screenshot>
    </screenshots>
    <recommends>
        <display_length compare="ge">350</display_length>
        <control>pointing</control>
        <control>keyboard</control>
        <control>touch</control>
    </recommends>
    <requires>
        <display_length compare="gt">300</display_length>
    </requires>
    <releases>
        <release version="1.0.0" date="2024-10-07">
            <description translate="no">
                <p>This is the first release of Caffeine.</p>
                <p>Calculate your coffee ratio now!</p>
            </description>
        </release>
    </releases>
</component>
